<% provide(:title, "Sign in") %>

<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
  <div class="container aside-xl"> <a class="navbar-brand block" href="index.html"></a>
    <section class="m-b-lg">
      <header class="wrapper text-center"> <strong>Sign in to get in touch</strong> </header>
      <%= form_for(:session, url: sessions_path, :html => {:class => 'login'}) do |f| %>
        <div class="list-group">
          <div class="list-group-item">
            <%= f.text_field :email, placeholder: 'Email', class: "form-control no-border"%>
          </div>
          <div class="list-group-item">
            <%= f.password_field :password, class: "form-control no-border", placeholder: 'Password' %>
          </div>
        </div>
        <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
        <div class="text-center m-t m-b"><a href="#"><small>Forgot password?</small></a></div>
        <div class="line line-dashed"></div>
        <p class="text-muted text-center"><small>Do not have an account?</small></p>
        <%= link_to "Create an account!", signup_path, class: "btn btn-lg btn-default btn-block" %>
        <% end %>
    </section>
  </div>
</section>
<!-- footer -->
<footer id="footer">
  <div class="text-center padder">
    <p> <small>ECM Real Estate Services Inc.
      &copy; 2014</small> </p>
  </div>
</footer>