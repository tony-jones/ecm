<% provide(:title, 'Sign up') %>

<section id="content" class="m-t-lg wrapper-md animated fadeInDown">
  <div class="container aside-xl"> <a class="navbar-brand block" href="index.html"></a>
    <section class="m-b-lg">
      <header class="wrapper text-center"> <strong>Sign up today</strong> </header>
      <%= form_for(@user, :html => {:class => 'login'}) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
        <div class="line line-dashed"></div>
        <p class="text-muted text-center"><small>Already have an account?</small></p>
        <a href="signin.html" class="btn btn-lg btn-default btn-block">Sign in</a>
      <% end %>
    </section>
  </div>
</section>
<!-- footer -->
<footer id="footer">
  <div class="text-center padder clearfix">
    <p> <small>ECM Real Estate Services Inc.
      &copy; 2014</small> </p>
  </div>
</footer>